{
  "name": "mvp-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build:ts": "rm -rf ./dist/ && tsc",
    "db:migrate": "prisma migrate dev",
    "dev": "npm run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:start": "FASTIFY_AUTOLOAD_TYPESCRIPT=1 node --watch dist/index.js",
    "format": "prettier --write .",
    "postinstall": "prisma generate",
    "lint": "eslint --fix .",
    "start": "npm run build:ts && NODE_ENV=production node dist/index.js",
    "pretest": "npm run build:ts && tsc -p test/tsconfig.json && DATABASE_URL=file:./test.db prisma migrate deploy",
    "test": "NODE_ENV=test FASTIFY_AUTOLOAD_TYPESCRIPT=1 node --test --experimental-test-coverage --loader ts-node/esm test/**/*.ts",
    "watch:ts": "tsc -w"
  },
  "dependencies": {
    "@fastify/autoload": "^6.0.2",
    "@fastify/sensible": "^6.0.1",
    "@prisma/client": "^6.0.0",
    "close-with-grace": "^2.1.0",
    "dotenv": "^16.4.5",
    "fastify": "^5.1.0",
    "fastify-cli": "^7.0.1",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^4.0.2",
    "jsonwebtoken": "^9.0.2",
    "pino-pretty": "^13.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@gurgelio/eslint-config": "^0.4.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.0",
    "c8": "^10.1.2",
    "concurrently": "^9.1.0",
    "eslint": "^9.15.0",
    "fastify-tsconfig": "^2.0.0",
    "globals": "^15.12.0",
    "prettier": "^3.4.1",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.6",
    "prisma": "^6.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": "^22"
  }
}
